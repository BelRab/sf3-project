{% extends '//base.html.twig' %}
{% block body %}

    <table border="1">
        <tr>
            <th>ID </th>
            <th>Author </th>
            <th>adresse e-mail </th>
            <th>Titre Message </th>
            <th>Contenu Message </th>
            <th>Date de publication </th>
        </tr>
        {% for b in bl %}
        <tr>
            <td>{{ b.id }}</td>
            <td>{{ b.author }}</td>
            <td>{{ b.mail }}</td>
            <td>{{ b.titreMessage }}</td>
            <td>{{ b.contenuMessage }}</td>
            <td>{{ b.datePublication |date("d/m/Y") }}</td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}